<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <ImageView
            android:id="@+id/userHeader"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="50px"
            android:background="@color/needHeader"
            />
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_marginLeft="20px"
            android:text="Joeson"
            android:textSize="33px"
            android:textColor="@color/needTitle"
            android:layout_toRightOf="@+id/userHeader"
            />
        <TextView
            android:id="@+id/userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userHeader"
            android:layout_below="@+id/userName"
            android:layout_marginLeft="20px"
            android:layout_marginTop="26px"
            android:textSize="24px"
            android:text="预算：￥900 风格：简约 周期：30天"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24px"
            android:layout_marginLeft="100px"
            android:layout_marginTop="26px"
            android:layout_toRightOf="@+id/userInfo"
            android:layout_below="@+id/userName"
            android:drawableLeft="@drawable/comments"
            android:text="12"
            android:textSize="24px"
            />
    </RelativeLayout>

</LinearLayout>