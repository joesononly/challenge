<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        style="@style/LineType"
        android:id="@+id/needTopLine"
        android:layout_width="1px"
        android:layout_height="70px"
        />
    <ImageView
        android:id="@+id/needComment"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="53px"
        android:layout_marginTop="70px"
        android:background="@drawable/comment"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/needComment"
        android:textColor="@color/needTitle"
        android:textSize="26dp"
        android:layout_marginLeft="53px"
        android:layout_marginTop="70px"
        android:text="咨询区"
        />
    <ListView
        android:id="@+id/userNeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/needComment"
        android:textColor="@color/userName"
        android:textSize="15dp"
        android:layout_marginLeft="53px"
        android:layout_marginRight="53px"
        android:layout_marginTop="170px"/>

</RelativeLayout>